<?xml version="1.0" encoding="utf-8"?><!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="hibernate.Student" table="student">
        <meta attribute="class-description">This class
            contains developer's details.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="age" column="age" type="int"/>
        <property name="university" column="university" type="java.lang.String"/>
        <property name="firstName" column="name" type="java.lang.String"/>
        <property name="secondName" column="surname" type="java.lang.String"/>
        <property name="email" column="email" type="java.lang.String"/>
        <property name="phoneNumber" column="phoneNumber" type="java.lang.String"/>
    </class>

</hibernate-mapping>
